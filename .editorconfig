# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[**.conf]
indent_style = tab
tab_width = 8

[**.{js,json}]
indent_size = 2
indent_style = space

[**/composer.json]
indent_size = 4

[**.html]
indent_style = tab
tab_width = 4

[**.md]
trim_trailing_whitespace = false

[**.sh]
indent_style = tab
tab_width = 8

[**.yml]
indent_size = 2
indent_style = space
